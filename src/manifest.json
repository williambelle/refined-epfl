{
  "name": "Refined EPFL",
  "description": "Improves user experience of EPFL website",
  "manifest_version": 2,
  "version": "0.0.1",

  "content_scripts": [{
    "js": [
      "js/utils.js",
      "js/themes.js",
      "js/contentscript.js"
    ],
    "matches": [ "*://*.epfl.ch/*" ],
    "run_at": "document_end"
  }],

  "icons": {
    "16": "images/icon-16.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },

  "web_accessible_resources": [
    "css/themes/*.css"
  ]
}
