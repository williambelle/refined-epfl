{
  "name": "Refined EPFL",
  "description": "Improves user experience of EPFL website",
  "manifest_version": 2,
  "version": "0.0.1",

  "applications": {
    "gecko": {
      "strict_min_version": "48.0",
      "id": "refined-epfl@example.com"
    }
  },

  "content_scripts": [{
    "js": [ "js/contentscript.js" ],
    "matches": [ "*://*.epfl.ch/*" ],
    "run_at": "document_end"
  }],

  "icons": {
    "48": "images/icon-48.png"
  },

  "web_accessible_resources": [
    "css/themes/*.css"
  ]
}
